<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Custom CSS for Poker theme -->
    <style>
        body {
            background-image: url('background_image.jpg');
            background-size: cover;
            color: #ffffff;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.7);
            border: 1px solid #ffffff;
            color: #ffffff;
        }

        .card-header {
            background-color: #c49b63;
            font-weight: bold;
        }

        .btn-warning {
            background-color: #c49b63;
        }

        .btn-game {
            background-color: #7b2c2c;
            border-color: #c49b63;
        }
    </style>

    <title>Poker Login System</title>
</head>

<body>

    <div class="container">
        <div class="row mt-5 justify-content-center">
            <div class="col-md-6">
                <% if(session.user_id) { %>

                    <h1 class="mt-5 text-center">Welcome, Player</h1>

                    <div class="d-flex justify-content-center mt-3">
                        <a href="/users/logout" class="btn btn-warning me-2">Logout</a>
                        <a href="/pokergameplay/game" class="btn btn-game">Start Game</a>
                    </div>
                    <form method="post" action="/pokergameplay/joingame">
                        <div class="mb-3">
                            <label>Join Game Code:</label>
                            <input type="text" name="user_game_id" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <input type="submit" class="btn btn-warning w-100" value="Join" />
                        </div>
                    </form>

                    <% } else { %>

                        <div class="card mt-5">
                            <div class="card-header text-center">
                                <h2>Login</h2>
                            </div>
                            <div class="card-body">
                                <form method="post" action="/users/login">
                                    <div class="mb-3">
                                        <label>Email Address</label>
                                        <input type="email" name="user_email_address" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label>Password</label>
                                        <input type="password" name="user_password" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <input type="submit" class="btn btn-warning w-100" value="Login" />
                                    </div>
                                </form>
                            </div>

                            <div class="card-header text-center">
                                <h2>Signup</h2>
                            </div>
                            <div class="card-body">
                                <form method="post" action="/users/signup">
                                    <div class="mb-3">
                                        <label>Email Address</label>
                                        <input type="email" name="user_email_address" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label>Password</label>
                                        <input type="password" name="user_password" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label>Repeat password</label>
                                        <input type="password" name="user_repeat_password" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <input type="submit" class="btn btn-warning w-100" value="Signup" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <% } %>
            </div>
        </div>
    </div>
</body>

</html>